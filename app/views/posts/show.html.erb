<p id="notice"><%= notice %></p>

<p>
  <strong>Category:</strong>
  <%= @post.category.name %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= raw @post.body %>
</p>

<p>
	<b>Image:</b>
    <%= image_tag @post.featured_url(:thumb) if @post.featured? %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
